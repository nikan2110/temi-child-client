<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".CustomerServiceSurveyActivity"
    android:background="#E7E9E6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
        android:orientation="horizontal"
        android:background="#E7E9E6">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/meuhedet_logo"
            android:scaleType="fitXY">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="45sp"
            android:textColor="@color/black"
            tools:text="What country this flag belong to?"
            />

        <LinearLayout
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:indeterminate="false"
                android:max="4"
                android:minHeight="50dp"
                android:progress="0" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="14sp"
                tools:text="0/4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_option_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_option"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_option_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="מרוצה במידה רבה מאוד"
                        android:textSize="28dp"
                        android:textColor="@color/grey" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/very_satisfied" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_option_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_option"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_option_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="מרוצה במידה רבה"
                        android:textSize="28dp"
                        android:textColor="@color/grey" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/satisfied" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_option_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_option"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_option_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="מרוצה במידה בינונית"
                        android:textSize="28dp"
                        android:textColor="@color/grey" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/little_satisfaction" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_option_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_option"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_option_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="כלל לא מרוצה"
                        android:textSize="28dp"
                        android:textColor="@color/grey" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/not_satisfied" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_question"
            android:layout_width="389dp"
            android:layout_height="113dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_send_customer_survey"
            android:text="שלח"
            android:fontFamily="@font/hebrew_font"
            android:lineHeight="42sp"
            android:textColor="#FFFFFF"
            android:textSize="64sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>